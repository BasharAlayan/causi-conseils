{% extends 'base.html.twig' %}

{% block head %}
    <meta charset="UTF-8">
    <title>{% block title %}Mot de passe oublié{% endblock %}</title>
{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <div class="col-md-12">
            <h1>Mot de passe oublié</h1>
            <h4>Si votre email est reconnu par notre système, un lien va afficher</h4>
            <br>
        </div>
        <div id="formContent">

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            <div class="form-group">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% set test = '0' %}
    {% for User in AllUsers %}
        {% if User.email == emailResult %}

          {#   {% include 'flash_messages.html.twig' %} #}
            <a href="{{ path('EmailOK',{'slug':  emailResult  } ) }}">Cliquez ici pour modifier le mot de passe</a>
            {% set test = '1' %}
        {% endif %}
    {% endfor %}

    {% if test ==0 %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}