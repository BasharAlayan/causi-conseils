{% extends 'base.html.twig' %}

{% block head %}
    <meta charset="UTF-8">
    <title>{% block title %}Mot de passe oubli√©{% endblock %}</title>
{% endblock %}

{% block body %}
    <div class="container">

        <br>

        <div class="col-md-12">
            <h1>Modifier le mot de passe.</h1>
            <br>
        </div>

        <div id="formContent">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.password) }}
            </div>
            <div class="form-group">
                {{ form_row(form.confirm_password) }}
            </div>
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            <div class="form-group">
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}